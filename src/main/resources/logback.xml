<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="3 seconds">

  <jmxConfigurator />
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %-5level %logger{15} - %msg%n</pattern>
    </encoder>
  </appender>
  
  <appender name="MESSAGEHANDLER" class="ch.qos.logback.core.FileAppender">
    <file>MessageHandler.log</file>
    <append>true</append>
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
    </encoder>
  </appender>
  
  <appender name="GAMEWITHSHIPS" class="ch.qos.logback.core.FileAppender">
    <file>GameWithShips.log</file>
    <append>true</append>
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
    </encoder>
  </appender>
  
  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>
  <logger name="com.clean" level="warn" />
  
  <logger name="com.clean.communication.message" level="debug" additivity="false">
    <appender-ref ref="MESSAGEHANDLER"/>
  </logger>
    <logger name="com.clean.shipgame.GameWithShips" level="debug" additivity="false">
    <appender-ref ref="GAMEWITHSHIPS"/>
  </logger>
  
</configuration>